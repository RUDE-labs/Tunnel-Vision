{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "target": "es6",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2015.iterable",
      "es2016",
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.*",
    "src/**/*.js"
  ],
  "typeRoots": [
    "node_modules/@types",
    "types"
  ]
}
